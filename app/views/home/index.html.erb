<section class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">
        <%= form_for @url, remote: true do |f|%>
            <div class="input-group">
              <%= f.text_field :long, placeholder: 'Paste your link', id: 'link-input', class: 'form-control short-input' %>
              <span class="input-group-btn">
                <%= f.submit 'Make short!', class: 'btn short-btn', id: 'submit-url' %>
                <%= button_tag 'Copy!', type: 'button', class: 'btn short-btn', id: 'copy-url' %>
              </span>
            </div>
        <% end %>
        <div class="errors-container">
          <div id="url-errors" class="alert alert-danger ">
            <%= render partial: 'urls/errors', locals: { messages: error_messages(@url) } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
